{
  "name": "anioke",
  "version": "0.1.0",
  "private": true,
  "author": "Sketch",
  "description": "Karaoki your anime songs.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zhxie/anioke.git"
  },
  "main": "public/main.js",
  "build": {
    "appId": "name.sketch.anioke",
    "productName": "Anioke",
    "extraMetadata": {
      "main": "build/main.js"
    },
    "files": [
      "build/**/*"
    ],
    "mac": {
      "category": "entertainment"
    }
  },
  "dependencies": {
    "better-sqlite3": "^7.5.3",
    "express": "^4.18.1",
    "internal-ip": "^7.0.0",
    "node-fetch": "^3.2.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "xml2js": "^0.4.23",
    "yt-dlp-wrap": "^2.3.11"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "build-electron && react-scripts build",
    "electron": "concurrently -k \"cross-env BROWSER=none npm start\" \"build-electron -d\" \"wait-on public/.build-electron-done http://127.0.0.1:3000 && electronmon .\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "electronmon": {
    "patterns": [
      "!cache/**"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "build-electron": "^1.0.5",
    "concurrently": "^7.2.2",
    "cross-env": "^7.0.3",
    "electron": "^18.3.5",
    "electron-builder": "^23.1.0",
    "electronmon": "^2.0.2",
    "react-scripts": "5.0.1",
    "wait-on": "^6.0.1"
  }
}
